<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('module::message.choose_discount') }}</h4>
</div>

<div class="modal-body">

    {% include "streams::modals/filter" %}

    <ul class="nav nav-pills nav-stacked">
        {% for discount in discounts %}
            <li class="nav-item">
                <a href="{{ url_to('admin/discounts/create?discount=' ~ discount.namespace) }}"
                   class="nav-link">
                    <strong>{{ trans(discount.getTitle()) }}</strong>
                    <br>
                    <small>{{ trans(discount.getDescription()) }}</small>
                </a>
            </li>
        {% endfor %}
    </ul>
</div>
