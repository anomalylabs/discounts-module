<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('module::message.choose_discount') }}</h4>
</div>

<div class="modal-body">
    {% if not extensions.isEmpty() %}
        <ul class="nav nav-pills nav-stacked">
            {% for extension in extensions %}
                <li class="nav-item">
                    <a href="{{ url_to('admin/discounts/create?extension=' ~ extension.id ~ '&parent=' ~ request_get('parent')) }}"
                       class="nav-link">
                        <strong>{{ trans(extension.title) }}</strong>
                        <br>
                        <small>{{ trans(extension.description) }}</small>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        {{ trans('streams::message.no_results') }}
    {% endif %}
</div>
